{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./src",
    "declaration": true,
    "declarationDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "src",
    "outDir": "./dist",
    "sourceMap": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "esModuleInterop": true
  }
}
